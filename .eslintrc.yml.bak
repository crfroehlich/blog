---
extends:
  - 'plugin:react/recommended'
  - 'plugin:@typescript-eslint/recommended'
  - 'prettier/@typescript-eslint'
  - 'plugin:prettier/recommended'
  - 'plugin:jsx-a11y/recommended'
  - prettier
  - prettier/react
  - eslint-config-airbnb-base
  - 'plugin:sonarjs/recommended'
plugins:
  - react
  - import
  - jsx-a11y
settings:
  react:
    version: detect
rules:
  '@typescript-eslint/no-var-requires': off
  complexity:
    - warn
    - max: 10
  import/extensions:
    - warn
    - .ts: ignorePackages
  import/no-extraneous-dependencies: off
  import/prefer-default-export: off
  linebreak-style: 0
  max-classes-per-file: off
  no-confusing-arrow: 1
  no-multiple-empty-lines: error
  no-unused-vars:
    - warn
    - argsIgnorePattern: ^_
  prettier/prettier:
    - error
    - arrowParens: always
      printWidth: 120
      singleQuote: true
      trailingComma: all
    - usePrettierrc: false
  quotes:
    - error
    - single
  semi:
    - error
    - always
  sort-imports:
    - warn
    - ignoreDeclarationSort: true
  tsdoc/syntax: warn
parser: '@typescript-eslint/parser'
parserOptions:
  ecmaVersion: 11
  sourceType: module
  ecmaFeatures:
    jsx: true
env:
  es6: true
  browser: true
  node: true
globals:
  graphql: false
